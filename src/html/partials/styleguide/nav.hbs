          <a href="{{rel}}{{href}}" class="sg-nav__link">{{title}}</a>
        </li>
        {{/each}}
      </ul>
    </li>

    <li class="sg-nav__item">
      <button class="sg-nav__button">
        <svg class="sg-nav__icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
