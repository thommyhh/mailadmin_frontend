---
title: Buttons
description: Buttons. You click on them. They do stuff.
---

{{#extend "layouts/components"}}
{{#content "body"}}

  {{#embed "layouts/article" title="Default w/ Label"}}
  {{#content "body"}}
    <button class="c-button">Button</button>
    <input type="button" class="c-button" value="Input">
    <a href="#" class="c-button">Link</a>
  {{/content}}
  {{/embed}}


