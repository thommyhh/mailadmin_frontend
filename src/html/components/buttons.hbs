---
title: Buttons
description: Buttons. You click on them. They do stuff.
---
{{#extend "layouts/components"}}
  {{#content "content"}}
    <article class="sg-article">
      <header class="sg-article__header">
        <h2 class="sg-article__title">Default</h2>
        <p class="sg-article__description">The default button.</p>
      </header>

      <div class="sg-article__body">

        <button class="c-button">Button</button>
        <input type="button" class="c-button" value="Input">
        <a href="#" class="c-button">Link</a>

      </div>
    </article>


